{
  "name": "rstTools",
  "displayName": "rst-tools",
  "publisher": "dshamshin",
  "description": "tools for restructuredtext",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:restructuredtext"
  ],
  "main": "./out/extension.js",
  "files": [
    "out/**/*",
    "package.json",
    "README.md"
  ],
  "contributes": {
    "commands": [
      {
        "command": "rstTools.helloWorld",
        "title": "Hello World"
      }
    ]
  },
  "repository": {
   "type": "git",
   "url": "https://github.com/shamshinds/rst-tools"
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.107.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.48.1",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
